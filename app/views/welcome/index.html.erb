
<% provide(:title, 'log in') %>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :users ,url: login_path,:onsubmit => "validateForm()" do |f| %>
      <%= f.label :email,"Email :" %><br>
      <%= f.email_field :email, :required => true ,:onblur => "validateEmail()"%><span id="errfn"></span><br>
      
      <%= f.label :password,"Password" %><br>
      <%= f.password_field :password, :required => true,:onblur => "validatePassword()" %><span id="errfn1"></span><br>


      <%= f.submit "login", class: "btn btn-primary", id: "form_submission" %>&nbsp;
      <%= link_to 'Registration', new_user_path %>
    <% end %>
  </div>
</div>
